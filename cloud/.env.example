# Environment variables for Voice Assistant
# Copy this file to .env and fill in your API keys

# Hugging Face (Free - Recommended for getting started)
# Sign up: https://huggingface.co/join
# Create token: https://huggingface.co/settings/tokens
HUGGINGFACE_API_TOKEN=

# OpenAI (Paid - $5 free credits available)
# Sign up: https://platform.openai.com
# Create key: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=

# Anthropic Claude (Paid)
# Sign up: https://console.anthropic.com/
# Create key: https://console.anthropic.com/account/keys
CLAUDE_API_KEY=

# Backend Configuration
FLASK_PORT=5000
FLASK_ENV=development
DEBUG=True

# Frontend Configuration
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_DEFAULT_SERVICE=huggingface
